<div class="bg-gray-100 p-8 min-h-screen">
  <%= form_with model: list, url: lists_path(current_user), method: :post do |form| %>
    <% if form.object.errors.any? %>
      <div class="mb-4 text-red-500">
        <% form.object.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :title, class: "block font-semibold mb-2" %>
      <%= form.text_field :title, class: "w-full px-4 py-2 border border-gray-300 rounded" %>
    </div>

    <div class="text-right">
      <%= form.submit "Create", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    </div>
  <% end %>

  <%= link_to "Back", root_path %> 
</div>
