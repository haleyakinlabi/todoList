<h1 class="text-3xl font-semibold mb-4">My Lists</h1>

<%= link_to "New List", new_list_path, class: "mb-4 inline-block bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" %>

<% @lists.each do |list| %>
  <div class="border border-gray-300 p-4 mb-4 rounded bg-gray-100">
    <h2 class="text-xl font-semibold">
      <%= link_to list.title, list_path(list.id) %>
    </h2>
    <p class="text-gray-600 text-sm mt-1">
      Created: <%= list.created_at.strftime('%B %d, %Y') %>
    </p>
  </div>
<% end %>

<% if @pagy.count > @pagy.items %>
    <%== pagy_nav(@pagy) %>
<% end %>


