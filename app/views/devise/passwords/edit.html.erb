<div class="bg-gray-100 p-8 min-h-screen">
  <h2 class="text-2xl font-semibold mb-4">Change Your Password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <div class="mb-4">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-4">
      <%= f.label :password, "New Password", class: "block font-semibold mb-2" %>
      <% if @minimum_password_length %>
        <span class="text-sm text-gray-600">(<%= @minimum_password_length %> characters minimum)</span>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, "Confirm New Password", class: "block font-semibold mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded" %>
    </div>

    <div class="text-right">
      <%= f.submit "Change My Password", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>

