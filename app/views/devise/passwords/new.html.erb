<div class="bg-gray-100 p-8 min-h-screen">
  <h2 class="text-2xl font-semibold mb-4">Forgot Password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="mb-4">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block font-semibold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded" %>
    </div>

    <div class="text-right">
      <%= f.submit "Send Reset Instructions", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>



