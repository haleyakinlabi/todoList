<div class="bg-gray-100 p-8 min-h-screen">
  <h2 class="text-2xl font-semibold mb-4">Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block font-semibold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block font-semibold mb-2" %>
      <% if @minimum_password_length %>
        <em class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block font-semibold mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded" %>
    </div>

    <div class="text-right">
      <%= f.submit "Sign Up", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>

