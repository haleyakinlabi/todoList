<div class="bg-gray-100 p-8 min-h-screen">
  <h2 class="text-2xl font-semibold mb-4">Log In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block font-semibold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block font-semibold mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border border-gray-300 rounded" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4 flex items-center">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, class: "text-sm text-gray-600" %>
      </div>
    <% end %>

    <div class="text-right">
      <%= f.submit "Log In", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>

